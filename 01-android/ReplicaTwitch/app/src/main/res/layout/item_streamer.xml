<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="25dp"
    >

    <ImageView
        android:id="@+id/iv_Stream"
        android:layout_width="125dp"
        android:layout_height="80dp"
        android:background="#111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_Logo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/logo_streamer1"

        app:civ_border_width="0dp"


        app:layout_constraintBottom_toBottomOf="@+id/iv_Stream"
        app:layout_constraintStart_toEndOf="@+id/iv_Stream"
        app:layout_constraintTop_toTopOf="@+id/iv_Stream"
        app:layout_constraintVertical_bias="0.0" />





    <TextView
        android:id="@+id/tv_Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="RenRize"

        android:textColor="@color/white"
        android:textStyle="bold"


        app:layout_constraintBottom_toBottomOf="@+id/iv_Stream"
        app:layout_constraintStart_toEndOf="@+id/iv_Stream"
        app:layout_constraintTop_toTopOf="@+id/iv_Stream"
        app:layout_constraintVertical_bias="0.007" />

    <TextView
        android:id="@+id/tv_Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Dia 4 DEDSAFIO"

        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="@+id/iv_Stream"
        app:layout_constraintStart_toEndOf="@+id/iv_Stream"
        app:layout_constraintTop_toTopOf="@+id/iv_Stream"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/tv_Categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Minecraft"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Stream"
        app:layout_constraintStart_toEndOf="@+id/iv_Stream"
        app:layout_constraintTop_toTopOf="@+id/iv_Stream"
        app:layout_constraintVertical_bias="0.845" />

    <TextView
        android:id="@+id/tv_Etiqueta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="12dp"
        android:background="#333"
        android:padding="2dp"

        android:text="EspaÃ±ol"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/tv_Categoria"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_Categoria"
        app:layout_constraintTop_toBottomOf="@+id/tv_Categoria" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/ic_baseline_more_vert_24"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_Nombre"
        app:layout_constraintVertical_bias="0.615" />


</androidx.constraintlayout.widget.ConstraintLayout>