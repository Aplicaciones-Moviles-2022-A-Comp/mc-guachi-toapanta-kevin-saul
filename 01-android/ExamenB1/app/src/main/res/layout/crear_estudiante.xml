<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nombreEst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Ingrese nombre del estudiante"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/apellidoEst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Ingrese apellido del estudiante"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/promeEst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Ingrese promedio del estudiante"
        android:minHeight="48dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edadEst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Ingrese edad del estudiante"
        android:minHeight="48dp"
        android:textSize="16sp" />

</LinearLayout>